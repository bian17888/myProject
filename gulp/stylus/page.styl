			color: #ffffff
			text-indent 2em
			line-height: 1.6
			margin 10px 0
.ggfw02
	.m-content
		background-color: #e2ebf4
		.ggfw-links
			width: 970px
			.ul-wrap
				width: 970px
				overflow hidden
				ul
					width 1000px
					li
						position: relative
						float: left
						width 227px
						padding 10px 0 12px
						margin 0 20px 0 0
						z-index: 9
						i,a
							display: inline-block
							vertical-align middle
							line-height: 18px
						i
							color #b0b6bb
						a
							color: #404044
						a:hover
							color: #266ca4
							text-decoration: none
						.div-line
							position absolute
							left 0
							bottom 0
							width: 227px
							height: 0
							line-height 0
							border-top 1px solid #dadada
							border-bottom 1px solid #fff

