/* 营养分析 */
.time-bar
	position relative
	border-bottom 1px solid #ccc
	padding 1rem 3.125%
	z-index 9
	a
		position absolute
		top 1rem
		color #00a0e9
		font-size 2rem
		text-decoration none
		z-index 99
	.btnPrev
		left 3.125%
	.btnNext	
		right 3.125%
	h3
		font-size 1.6rem
		text-align center
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		margin 0 1.5rem
.elements-percentage
	font-size 1.3rem
	padding 1.5rem 4.6875%
	border-bottom 1px solid #ddd
	dt
		display block
		font-size 1.3rem
		margin-bottom 0.2rem
	dd
		display -webkit-box
		display -moz-box
		display -box
		margin-bottom 1rem
		div:first-child
			position relative
			height 0.8rem
			-webkit-box-flex 1.0
			-moz-box-flex 1.0
			box-flex 1.0 
			border-bottom 2px solid #ddd
			z-index 9
			.span-now
				position absolute
				left 0 
				bottom -2px
				display block
				height 0.8rem
				background-color #f00
				border-radius 0.2rem
				z-index 99
		div:last-child
			color #00a0e9
	
	dd.blue .span-now
		background-image:-moz-linear-gradient(left , #60a8f4, #5dd9e5);background-image:-webkit-gradient(linear, 0% 50%, 100% 50%, from(#60a8f4), to(#5dd9e5));
	dd.green .span-now
		background-image:-moz-linear-gradient(left , #74bf26, #ace42b);background-image:-webkit-gradient(linear, 0% 50%, 100% 50%, from(#74bf26), to(#ace42b));
	dd.yellow .span-now
		background-image:-moz-linear-gradient(left , #ffb319, #ffd427);background-image:-webkit-gradient(linear, 0% 50%, 100% 50%, from(#ffb319), to(#ffd427));
