/* ===== Page ===== */
/* 营养分析 */
.time-bar
	position relative
	border-bottom 1px solid #ccc
	padding 1rem 3.125%
	z-index 9
	a
		position absolute
		top 1rem
		color #00a0e9
		font-size 2rem
		text-decoration none
		z-index 99
	.btnPrev
		left 3.125%
	.btnNext	
		right 3.125%
	h3
		font-size 1.6rem
		text-align center
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		margin 0 1.5rem
.elements-percentage
	font-size 1.3rem
	padding 1.5rem 4.6875%
	border-bottom 1px solid #ddd
	dt
		display block
		font-size 1.3rem
		margin-bottom 0.2rem
	dd
		display -webkit-box
		display -moz-box
		display -box
		margin-bottom 1rem
		div:first-child
			position relative
			height 0.8rem
			-webkit-box-flex 1.0
			-moz-box-flex 1.0
			box-flex 1.0 
			border-bottom 2px solid #ddd
			z-index 9
			.span-now
				position absolute
				left 0 
				bottom -2px
				display block
				height 0.8rem
				background-color #f00
				border-radius 0.2rem
				z-index 99
		div:last-child
			color #00a0e9
	
	dd.blue .span-now
		background-image:-moz-linear-gradient(left , #60a8f4, #5dd9e5);background-image:-webkit-gradient(linear, 0% 50%, 100% 50%, from(#60a8f4), to(#5dd9e5));
	dd.green .span-now
		background-image:-moz-linear-gradient(left , #74bf26, #ace42b);background-image:-webkit-gradient(linear, 0% 50%, 100% 50%, from(#74bf26), to(#ace42b));
	dd.yellow .span-now
		background-image:-moz-linear-gradient(left , #ffb319, #ffd427);background-image:-webkit-gradient(linear, 0% 50%, 100% 50%, from(#ffb319), to(#ffd427));
		
/* 体重BMI */
.bmi-num
	padding 1.6rem 0
	ul
		-webkit-column-count 3
		column-count 3
		-webkit-column-gap 1.4rem
		-column-gap 1.4rem
		-webkit-column-rule 2px solid #e6e6e6
		olumn-rule 2px solid #e6e6e6
		li
			color #999
			font-size 1.4rem
			line-height 1.5
			text-align center
			dd
				font-size 2.6rem
				font-weight normal
				strong
					font-size 2rem
					font-weight normal
				small
					font-size 1.6rem

/* 饮食记录 */
.ysjl .ysjl-list
	font-size 1.4rem
	h3
		color #666	
		background-color #e6f3fa
		padding 0.8rem 3.125%
	li p
		border-bottom 1px solid #ddd
		padding 1.2rem 3.125% 0
		strong
			color #00a0e9
			line-height 2rem
		i
			display inline-block
			verticle-align middle
			color #8fc31f
			font-size 2.6rem
			cursor pointer
	ol li
		font-size 1.6rem
		border-bottom 1px solid #ddd
		padding 1rem 4.6875%
		span
			color #999
	li:last-child p
		border-bottom 0px
	h3, li p, ol li
		display -webkit-box
		display box
		strong
			display block
			font-weight normal
			-webkit-box-flex 1.0
			-moz-box-flex 1.0
			box-flex 1.0
	

		
		
			



