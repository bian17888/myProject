/* ===== Common ===== */
html
	font-size 62.5% 
body
	font normal 100%/1 "\5FAE\8F6F\96C5\9ED1"
	color #666
.c-blue-deep
	color #00a0e9
.c-blue-light
	color #bbdcf4
.c-blue-lighter
	color #dfeaf8
.c-yellow
	color #fabe00
.c-pink
	color #eb6ea5
.c-green
	color #8fc31f
.c-grey
	color #dfeaf8
.c-grey-light
	color #dddddd
.c-465C
	color #c9a063

.m-icon
	display inline-block
	vertical-align middle
	background url(../images/bg_icons.png) no-repeat 0 0
.m-icon-ysjl
	width 23px
	height 24px
	background-position -56px 0
.m-icon-yysp
	width 23px
	height 24px
	background-position -56px -28px
.m-icon-yygz
	width 23px
	height 24px
	background-position 0 0
.m-icon-tzbmi
	width 23px
	height 24px
	background-position 0 -28px
.m-icon-yfkt
	width 23px
	height 24px
	background-position 0 -56px
.m-icon-wdxx
	width 23px
	height 24px
	background-position 0 -85px

.top-tool
	background-image:-moz-linear-gradient(top , #1b1a20, #363638);background-image:-webkit-gradient(linear, 50% 0%, 50% 100%, from(#1b1a20), to(#363638));
	padding 1.2rem 3.125%
	.top-tool-in
		position relative
		z-index 9
		a
			position absolute
			top 0.2rem
			color #fff
			font-size 1.4rem
			text-decoration none
			z-index 99
		.btnBack
			left 0
		.btnMore
			right 0
			top -0.1rem
			font-size 1.8rem
		h2
			color #fff
			font-size 1.8rem
			text-align center
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			margin 0 3.5rem
.nav-top
	background-color #5cb8e7
	padding 0.9rem 0
	
.m-nav-tab
	text-align center
	a
		position relative
		display inline-block
		color #fff
		font-size 1.4rem
		line-height 1.4rem
		text-decoration none
		padding 0.5rem 0rem
		margin 0 2rem
		z-index 9
		i
			position absolute
			top 0
			display inline-block
			width 2.2rem
			height 2.4rem
			background #fff
			-webkit-border-radius 50%
			-moz-border-radius 50%
			border-radius 50%
			z-index -1
		i.i-l
			left -1.1rem
		i.i-r
			right -1.1rem
		
	a.active
		color #00a0e9
		text-decoration none
		background #fff
		
.m-list
	padding 0 4.6875%
	li
		border-bottom 1px solid #ddd
		padding 1.5rem 0
		a
			position relative
			display block
			font-size 1.6rem
			text-decoration none
			z-index 9
			span
				display inline-block
				width 82%
				white-space nowrap
				overflow hidden
				text-overflow ellipsis
				vertical-align middle
				color #666
				margin-left 0.5rem
			i:last-child
				position absolute
				right 0
				top 0.4rem
				z-index 99
.m-nav-main
	display block
	padding 0 
	-webkit-column-count 4
	column-count 4
	-webkit-column-gap 0 
	-column-gap 0 
	padding 1rem 0 0
	a
		display block		
		text-align center
		text-decoration none
		font-size 1rem
		background-color #fff
		span
			display block
			color #666
			text-align center
			margin-top 0.6rem
	a.active span
		color #00a0e9
	a.active
		.m-icon-yygz
			background-position -28px 0
		.m-icon-tzbmi
			background-position -28px -28px
		.m-icon-yfkt
			background-position -28px -56px
		.m-icon-wdxx
			background-position -28px -85px




